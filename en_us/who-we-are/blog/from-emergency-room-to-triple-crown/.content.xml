                            <text
                                cq:lastRolledout="{Date}2023-01-25T22:06:48.405Z"
                                cq:lastRolledoutBy="evan_lynch@vfc.com"
                                jcr:created="{Date}2019-10-24T22:02:20.629Z"
                                jcr:createdBy="wade_litsey@vfc.com"
                                jcr:lastModified="{Date}2023-01-25T22:06:48.399Z"
